public class SumUsingRecursion {
    public static int sum(int n) {
        if (n == 0) return 0; // base case
        return n + sum(n - 1);
    }

    public static void main(String[] args) {
        int n = 5;
        System.out.println("Sum of first " + n + " numbers = " + sum(n)); // 15
    }
}
